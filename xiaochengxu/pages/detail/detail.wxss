#myVideo{
  width: 100%;
  height: 225px;
}

.art-header{
    position: relative;
    width: 100%;
    height: 280px;
    color: #FFF;
}

.art-img{
    width: 100%;
    height: 219px;
}

.art-title{
    position: absolute;
    bottom: 2px;
    left: 12px;
    font-size: 16px;
    color: black;
}

.art-source {
    position: absolute;
    bottom: 0px;
    font-size: 14px;
    right: 8px;  
    color: black; 
}

.art-content{
    padding: 16px;
    font-size: 14px;
    color: #616466;
    width: 100%;
}

.txtInput{
  border: 1px green solid;
  border-radius: 4px;
  width: 95%;
  height: 35px;
  margin: 8px;
}

.btnsend{
  width: 95%;
  height: 40px;
  margin: 8px;
}